{
  "apps": [
    {
      "merge_logs": true,
      "name": "worker1",
      "out_file": "/app/tmp/workers.log",
      "log_date_format": "MM/DD/YYYY HH:mm:ss",
      "script": "lib/worker.js"
    },
    {
      "merge_logs": true,
      "name": "worker2",
      "out_file": "/app/tmp/workers.log",
      "log_date_format": "MM/DD/YYYY HH:mm:ss",
      "script": "lib/worker.js"
    },
    {
      "merge_logs": true,
      "name": "pm2-notifier",
      "out_file": "/app/tmp/pm2-notifier.log",
      "script": "lib/pm2-notifier.js",
      "env": {
        "EC2": "ENV_CTXT"
      }
    },
    {
      "name": "mynodeapp",
      "script": "./app/app.js",
      "merge_logs": true,
      "max_restarts": 20,
      "instances": 4,
      "max_memory_restart": "200M",
      "out_file": "/app/tmp/servers.log",
      "log_date_format": "MM/DD/YYYY HH:mm:ss",
      "env": {
        "PORT": 5000,
        "NODE_ENV": "production"
      }
    }
  ]
}